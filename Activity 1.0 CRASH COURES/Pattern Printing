/*
    a program that will accept an integer greater than 0(N),and
    print out N lines of asterisks('*') into a pattern specific to
    that input seen on the samples.
*/
#include <stdio.h>
int main() {
   int i, j, rows,space;
   printf("Enter Integer: ");
   scanf("%d", &rows);
   for (i = 1; i <= rows; ++i) {
        for (space = 1; space <= rows - i; ++space) {
         printf(" ");
        }
        for (j = 1; j <= i; ++j) {
         printf(" *");
        }
        printf("\n");
   }
   return 0;
}
